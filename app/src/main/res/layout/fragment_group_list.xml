<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bental.studentsapp2.Fragments.GroupListFragment"
    android:weightSum="1"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingStart="0dp"
    android:paddingTop="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_weight="0.89">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:id="@+id/listViewGroups"
            android:layout_weight="15.51"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_weight="1"
    android:background="@color/common_plus_signin_btn_text_dark_disabled">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Create Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateGroup"
            android:layout_weight="1"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            style="@android:style/ButtonBar"
            android:paddingBottom="0dip"
            android:paddingEnd="0dip"
            android:paddingStart="0dip"
            android:paddingTop="0dip"
            android:layout_marginLeft="1dp" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>
